<div class="wrapper d-flex align-items-stretch">
  <div id="content" class="p-4 p-md-5">
    <div id="page-wrapper">
      <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
          <div class="col-lg-12">
            <ol class="breadcrumb">
              <li class="active">
                <h1>Dashboard</h1>
              </li>
            </ol>
          </div>
        </div>

       <div class="row justify-content-center align-items-center">
        <div class="col-lg-3 col-md-6">
            <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                <div class="col-xs-3">
                    <i class="fa fa-box fa-5x"></i>
                </div>
                <div class="col-xs-9 text-right">
                    <% if current_user.admin? %>
                    <div class="huge"><%= @admin_lockers_count %></div>
                    <% else %>
                    <div class="huge"><%= @user_keylockers_count %></div>
                    <% end %>
                    <div>Meus Lockers</div>
                </div>
                </div>
            </div>
            </div>
        </div>
        <% if current_user.admin? %>
            <div class="col-lg-3 col-md-6">
                <div class="panel panel-green">
                <div class="panel-heading">
                    <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-user fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <% if current_user.admin? %>
                        <div class="huge"><%= @admin_users_count %></div>
                        <% else %>
                        <div class="huge"><%= @user_keylockers_count %></div>
                        <% end %>
                        <div>Meus Usuários</div>
                    </div>
                    </div>
                </div>
                </div>
            </div>
        <% else %>

        <% end %>
        <div class="col-lg-3 col-md-6">
            <div class="panel panel-yellow">
            <div class="panel-heading">
                <div class="row">
                <div class="col-xs-3">
                    <i class="fa fa-user-tie fa-5x"></i>
                </div>
                <div class="col-xs-9 text-right">
                    <% if current_user.admin? %>
                    <div class="huge"><%= @admin_employees_count %></div>
                    <% else %>
                    <div class="huge"><%= @user_employees_count %></div>
                    <% end %>
                    <div>Meus Funcionários</div>
                </div>
                </div>
            </div>
            </div>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>
