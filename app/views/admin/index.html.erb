<!-- Na sua view de Employee -->
<h1>Employees and their Associated Lockers</h1>

<table>
  <thead>
    <tr>
      <th>Employee ID</th>
      <th>Employee Name</th>
      <th>Locker ID</th>
      <th>Locker Name</th>
    </tr>
  </thead>
  <tbody>
    <% @employees.each do |employee| %>
      <% employee.keylockers.each do |keylocker| %>
        <tr>
          <td><%= employee.id %></td>
          <td><%= employee.name %></td>
          <td><%= keylocker.id %></td>
          <td><%= keylocker.nameDevice %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>