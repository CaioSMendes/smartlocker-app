<h1>Lista de Funcion치rios</h1>

<% @employees.each do |employee| %>
  <div id="<%= dom_id employee %>">
  <p>
    <strong>Owner:</strong>
    <%= employee.user.nameCompany || 'N/A' %>
    <%= employee.user.name || 'N/A' %>
    <%= employee.user.lastname || 'N/A' %>
  </p>

    <p>
      <strong>Name:</strong>
      <%= employee.name || 'N/A' %>
    </p>

    <p>
      <strong>Lastname:</strong>
      <%= employee.lastname || 'N/A' %>
    </p>


    <!-- Outros detalhes do funcion치rio -->

    <p>
      <strong>Keylockers:</strong>
      <% if employee.keylockers.any? %>
        <ul>
          <% employee.keylockers.each do |keylocker| %>
            <li>
              <%= keylocker.nameDevice %> - <%= keylocker.status %>
            </li>
          <% end %>
        </ul>
      <% else %>
        Nenhum keylocker associado.
      <% end %>
    </p>

    <!-- Mais detalhes do funcion치rio se necess치rio -->
  </div>

  <hr>
<% end %>




